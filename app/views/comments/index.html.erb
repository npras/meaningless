<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Discussion</th>
      <th>Name</th>
      <th>Email</th>
      <th>Body</th>
      <th>Ip address</th>
      <th>User agent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.discussion_id %></td>
        <td><%= comment.name %></td>
        <td><%= comment.email %></td>
        <td><%= comment.body %></td>
        <td><%= comment.ip_address %></td>
        <td><%= comment.user_agent %></td>
        <td><%= link_to 'Show', site_discussion_comment_path(@site, @discussion, comment) %></td>
        <td><%= link_to 'Edit', edit_site_discussion_comment_path(@site, @discussion, comment) %></td>
        <td><%= link_to 'Destroy', site_discussion_comment_path(@site, @discussion, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_site_discussion_comment_path(@site, @discussion) %>
