<h1>Log In</h1>

<%= form_with url: sessions_path, local: true do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :remember_me %><br />
    <%= f.check_box :remember_me %>
  </div>

  <div class="field">
    <%= link_to 'forgot password?', new_password_reset_path %>
  </div>

  <% if @show_checkbox_recaptcha %>
    <%= recaptcha_tags(site_key: @v2_site_key) %>
  <% else %>
    <%= recaptcha_v3(site_key: @v3_site_key, action: :login) %>
  <% end %>

  <div class="actions"><%= f.submit "Log In", data: { "disable-with": "Logging in..." } %></div>
<% end %>
