<p id="notice"><%= notice %></p>

<h1>Discussions</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Title</th>
      <th>Comments count</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      <%= @site.id %>
      <%= discussion.id %>
      <tr>
        <td><%= discussion.url %></td>
        <td><%= discussion.title %></td>
        <td><%= discussion.comments_count %></td>
        <td><%= discussion.site_id %></td>
        <td><%= link_to 'Show', site_discussion_path(@site, discussion) %></td>
        <td><%= link_to 'Edit', edit_site_discussion_path(@site, discussion) %></td>
        <td><%= link_to 'Destroy', site_discussion_path(@site, discussion), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discussion', new_site_discussion_path(@site) %>
